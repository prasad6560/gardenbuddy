<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.feedback.FeedbackFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/matt_green"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="Feedback Form"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- 1. Overall Experience -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Overall Experience"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkbox_excellent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Excellent" />

            <CheckBox
                android:id="@+id/checkbox_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good" />

            <CheckBox
                android:id="@+id/checkbox_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Average" />

            <CheckBox
                android:id="@+id/checkbox_poor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poor" />

            <!-- 2. User-Friendly -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Is the app user-friendly?"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkbox_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes" />

            <CheckBox
                android:id="@+id/checkbox_somewhat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Somewhat" />

            <CheckBox
                android:id="@+id/checkbox_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No" />

            <!-- 3. Helpful Features -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Which features did you find most helpful?"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkbox_planting_guides"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Planting Guides" />

            <CheckBox
                android:id="@+id/checkbox_watering_and_care"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Watering and care" />

            <!-- 4. Tips Accuracy -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. Are the tips and guides accurate and informative?"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkbox_very_helpful"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Very helpful" />

            <CheckBox
                android:id="@+id/checkbox_somewhat_helpful"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Somewhat helpful" />

            <CheckBox
                android:id="@+id/checkbox_not_helpful"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not helpful" />

            <!-- 5. Rating -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5. How much would you rate the app?"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkbox_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

            <CheckBox
                android:id="@+id/checkbox_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2" />

            <CheckBox
                android:id="@+id/checkbox_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3" />

            <CheckBox
                android:id="@+id/checkbox_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4" />

            <CheckBox
                android:id="@+id/checkbox_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5" />

            <!-- Submit Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/matt_green"
                android:text="Submit"
                android:textAllCaps="true" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
