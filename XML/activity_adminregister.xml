<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8">

    <ImageView
        android:id="@+id/forward_button"
        android:layout_width="66dp"
        android:layout_height="88dp"
        android:layout_marginTop="112dp"
        android:scaleType="fitXY"
        android:src="@drawable/thirdimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/titleLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/forward_button"
        app:layout_constraintBottom_toBottomOf="@id/forward_button">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Register"
            android:textColor="#2E7D32"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/subtitle"
            android:layout_width="260dp"
            android:layout_height="27dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="Create your new account"
            android:textColor="#808080"
            android:textSize="15sp"/>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/name_input"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/edt_bg"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/titleLay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="User Icon"
            android:src="@drawable/name" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#C9E0C9"
            android:text="Full Name"
            android:textColor="#256724"
            android:textColorHint="#808080" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_bg"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_input" />

    <LinearLayout
        android:id="@+id/email_input"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edt_bg"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_input">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="Email Icon"
            android:src="@drawable/email" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#C9E0C9"
            android:text="Email"
            android:inputType="textEmailAddress"
            android:textColor="#256724"
            android:textColorHint="#808080" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/password_input"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edt_bg"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_input">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="Password Icon"
            android:src="@drawable/password" />

        <EditText
            android:id="@+id/edtPass"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="#C9E0C9"
            android:inputType="textEmailAddress"
            android:text="Password"
            android:textColor="#256724"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Already have an account? Sign in"
        android:textColor="#2E7D32"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_button" />

</androidx.constraintlayout.widget.ConstraintLayout>
