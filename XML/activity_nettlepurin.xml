<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nettlepurin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/textView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="Nettle Purin Preparation"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/dark_green"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="198dp"
            android:layout_height="190dp"
            android:layout_marginTop="16dp"
            android:scaleType="fitXY"
            app:layout_constraintTop_toBottomOf="@id/textView32"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/nettlepurin" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:text="• Collect fresh stinging nettles (avoid flowering ones) and water.\n• Use a non-metallic container like a bucket with a lid.\n• Cut the nettles into small pieces to increase surface area.\n• Cover the container loosely to allow air exchange. Stir the mixture daily for 1–2 weeks and store it in a bottle."
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/imageView20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textView40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="Benefits"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/dark_green"
            app:layout_constraintTop_toBottomOf="@id/textView31"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textView41"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:text="• Dilute 1 part nettle purin with 10 parts water and use it as a liquid fertilizer. It provides nitrogen, minerals, and trace elements.\n• Spray diluted purin on plants to deter pests like aphids.\n• Add a small amount of purin to compost to speed up decomposition.\n• Suitable for lettuce, spinach."
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/textView40"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
