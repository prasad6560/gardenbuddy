<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".compost">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Compost Title -->
            <TextView
                android:id="@+id/textView36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Compost"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="32dp"
                android:layout_gravity="center" />

            <!-- Compost Image -->
            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="match_parent"
                android:layout_height="274dp"
                android:scaleType="fitCenter"
                android:src="@drawable/compost1"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp" />

            <!-- Section Header -->
            <TextView
                android:id="@+id/textView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Steps for Composting"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp" />

            <!-- Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Select a Spot: Choose a shaded, well-drained area for your compost pile or bin.\n• Layer Materials: Alternate layers of kitchen scraps (fruit peels, vegetable scraps) with dried leaves.\n• Moisten Lightly: Sprinkle water to keep the pile damp, like a wrung-out sponge.\n• Turn Regularly: Mix the pile every 1-2 weeks to aerate and speed up decomposition.\n• Harvest Compost: In 2-3 months, use the dark, crumbly compost in your garden."
                android:textSize="18sp"
                android:layout_marginBottom="20dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
