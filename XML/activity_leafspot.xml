<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".leafspot">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Leaf Spot"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/matt_green"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5" />

            <ImageView
                android:id="@+id/imageView21"
                android:layout_width="305dp"
                android:layout_height="199dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitXY"
                app:layout_constraintTop_toBottomOf="@id/textView45"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/leafspot" />

            <TextView
                android:id="@+id/textView50"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:text="• Leaf spot is a common plant disease caused by various pathogens such as fungi, bacteria, or viruses.\n• Imbalances can weaken plants, making them more susceptible.\n• Mostly occur in vegetables like tomato, cucumber and lettuce."
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/imageView21"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/textView51"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Treatment"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/matt_green"
                app:layout_constraintTop_toBottomOf="@id/textView50"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5" />

            <TextView
                android:id="@+id/textView52"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:text="• Identify the affected plant and type of leaf spot.\n• Remove infected leaves to prevent spread.\n• Isolate affected plants, especially in indoor or garden setups.\n• Use streptomycin sprays for bacterial pathogens.\n• Clean up fallen leaves and debris where pathogens can thrive."
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/textView51"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
